import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
         Switch case
        int age;
        System.out.println("enter your age:");
        Scanner sc = new Scanner(System.in);
        age = sc.nextInt();
        switch (age) {
            case 18:
                System.out.println("you're an adult");
                break;
            case 20:
                System.out.println("you;re an adult");
                break;
            case 22:
                System.out.println("you're about to get a job");
                break;
            case 60:
                System.out.println("you're about to retired");
                break;
        }
